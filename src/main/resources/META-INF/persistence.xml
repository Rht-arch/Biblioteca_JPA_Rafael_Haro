<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="biblioteca">
        <class>Practica.DTOs.Usuario</class>
        <class>Practica.DTOs.Libro</class>
        <class>Practica.DTOs.Ejemplar</class>
        <class>Practica.DTOs.Prestamo</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/biblioteca"/>
            <property name="jakarta.persistence.jdbc.user" value="Rafiki"/>
            <property name="jakarta.persistence.jdbc.password" value="123"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
